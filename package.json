{
  "displayName": "Homebridge dingz Plugin",
  "name": "homebridge-dingz",
  "version": "1.8.0",
  "author": "johannrichard",
  "description": "Homebridge Plugin for dingz & myStrom Devices. Implements some (but not all, due to API limitations) functions of a [dingz](https://dingz.ch) Smart Home Device.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/johannrichard/homebridge-dingz.git"
  },
  "bugs": {
    "url": "https://github.com/johannrichard/homebridge-dingz/issues"
  },
  "engines": {
    "node": ">=10.17.0",
    "homebridge": ">0.4.53"
  },
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src/**.ts",
    "watch": "npm run build && npm link && nodemon",
    "build": "rimraf ./dist && tsc",
    "prepublishOnly": "npm run lint && npm run build",
    "prepare": "npm run lint && npm run build"
  },
  "keywords": [
    "homebridge-plugin",
    "dingz",
    "smarthome",
    "iot"
  ],
  "dependencies": {
    "@types/node": "^14.0.13",
    "@types/node-fetch": "^2.5.7",
    "abort-controller": "^3.0.0",
    "async-mutex": "^0.2.2",
    "axios": "^0.21.0",
    "axios-retry": "^3.1.8",
    "body-parser": "^1.19.0",
    "cockatiel": "^1.1.1",
    "express": "^4.17.1",
    "qs": "^6.9.4",
    "simple-color-converter": "^2.1.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.6",
    "@types/form-data": "^2.5.0",
    "@types/qs": "^6.9.2",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "homebridge": "^1.0.4",
    "husky": "^4.2.5",
    "nodemon": "^2.0.3",
    "prettier": "2.1.2",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
